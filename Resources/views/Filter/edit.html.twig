{% extends 'MesdFilterBundle::layout.html.twig' %}

{% form_theme form 'MesdFilterBundle:Form:fields.html.twig' %}

{% block body -%}
    <h1>Filter edit</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    <div class="form-group">
        {{
            form_label(
                form.filterEntity
            )
        }}
        {{
            form_widget(
                form.filterEntity,
                {
                    'attr': {
                        'data-url': url(
                            'MesdUserBundle_filter_category_data',
                            {
                                'id': -1,
                            }
                        ),
                    }
                }
            )
        }}
        {{
            form_errors(
                form.filterEntity
            )
        }}
    </div>
    <div class="form-group">
        {{
            form_label(
                form.filterRow,
                'Filter Definition'
            )
        }}
        {{
            form_widget(
                form.filterRow,
                {
                    'attr': {
                        'class': 'hidden',
                    }
                }
            )
        }}
        {{
            form_errors(
                form.filterRow
            )
        }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('filter') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock body %}
