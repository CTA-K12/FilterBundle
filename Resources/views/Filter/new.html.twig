{% extends 'MesdFilterBundle::layout.html.twig' %}

{% form_theme form 'MesdFilterBundle:Form:fields.html.twig' %}

{% block body -%}
    <h1>Filter creation</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    <div class="form-group">
        {{
            form_label(
                form.filterCategory
            )
        }}
        {{
            form_widget(
                form.filterCategory,
                {
                    'attr': {
                        'data-url': url(
                            'MesdUserBundle_filter_category_data',
                            {
                                'id': -1,
                            }
                        )
                    }
                }
            )
        }}
        {{
            form_errors(
                form.filterCategory
            )
        }}
    </div>
    <div class="form-group">
        {{
            form_label(
                form.filterRow,
                'Filter Definition'
            )
        }}
        {{
            form_widget(
                form.filterRow
            )
        }}
        {{
            form_errors(
                form.filterRow
            )
        }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path('filter') }}">
                Back to the list
            </a>
        </li>
    </ul>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Large modal</button>

    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          Editing Cell
        </div>
      </div>
    </div>
{% endblock body %}
