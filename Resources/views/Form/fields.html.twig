{%- block form_label -%}
    {% if label is not sameas(false) -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif %}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif %}
        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label>
        {% if required %}<span class="text-danger" title="This field is required">*</span>{% endif %}
    {%- endif -%}
{%- endblock form_label -%}

{% block _mesd_filterbundle_filter_filterRow_widget %}
    <textarea {{ block('widget_attributes') }}>{% for filterRow in value %}{% if not loop.first %},{% endif %}[{% for solvent in filterRow.solvent %}{% if not loop.first %},{% endif %}[{{ '{"associationId":"' ~ solvent.associationId ~ '","solvent":['}}{% for id in solvent.solvent %}{% if not loop.first %},{% endif %}{{ id }}{% endfor %}{{']}' }}]{% endfor %}]{% endfor %}</textarea>
    {% if value is not empty %}
        <div id="filter-interface">
            Loading...
            <table id="filter-interface-table" class="table table-striped table-bordered table-hover table-responsive" data-rows="{{ value | length }}">
                <tbody>
                    <tr>
                        {% set associations = form.vars.value.owner.filterCategory.filterAssociation %}
                        {% set n = associations | length %}
                        {% for association in associations %}
                            {% if not loop.first %}
                                <th></th>
                            {% endif %}
                            <th>{{ association.name }}</th>
                        {% endfor %}
                    </tr>
                    {% set row = 0 %}
                    {% for filterRow in value %}
                        {% if not loop.first %}
                            <tr>
                                <td colspan="{{ (n * 2) - 1 }}">OR</td>
                            </tr>
                        {% endif %}
                        <tr>
                            {% for i in 0..(n-1) %}
                                {% if not loop.first %}
                                    <td>AND</td>
                                {% endif %}
                                {% set found = false %}
                                {% for filterCell in filterRow.filterCell %}
                                    {% if filterCell.filterAssociation.id == associations[i].id %}
                                        {% set found = true %}
                                        <td>
                                            <div id="" class="filter-cell" data-cell-solvent="[{% for id in filterCell.solvent %}{% if not loop.first %},{% endif %}{{ id }}{% endfor %}]" data-association-id="{{ associations[i].id }}">{{ filterCell.description }}</div>
                                            <div>
                                                <button type="button" class="btn btn-default" data-toggle="modal" data-div-id="{{ associations[i].name | lower | replace({' ' : '-' })}}-{{ row }}">Edit {{ associations[i].name }}</button>
                                                
                                            </div>
                                        </td>
                                    {% endif %}
                                {% endfor %}
                                {% if not found %}
                                <td>
                                    <div id="" class="filter-cell" data-cell-solvent="[-1]" data-association-id="{{ associations[i].id }}">No {{ associations[i].name }} selected</div>
                                    <div>
                                        <button type="button" class="btn btn-default" data-toggle="modal" data-div-id="{{ associations[i].name | lower | replace({' ' : '-' })}}-{{ row }}">Edit {{ associations[i].name }}</button>
                                    </div>
                                </td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                        {% set row = row + 1 %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div id="filter-interface">
            Please select a Filter Category.
        </div>
    {% endif %}
{% endblock %}
